    "version": "0.2.0",
    "configurations": [
        {
            "name": "Full Input",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/output/debug/${fileBasenameNoExtension}",
            "args": ["${workspaceRoot}/data/${fileBasenameNoExtension}/input.dat"],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
        {
            "name": "Example Input",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/output/debug/${fileBasenameNoExtension}",
            "args": ["${workspaceRoot}/data/${fileBasenameNoExtension}/example.dat"],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}